<UserControl x:Class="iRobotGUI.Controls.InstructionPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" Width="210" Height="450">
    <UserControl.Resources>
        <Style x:Key="InstructionStyle" TargetType="Image">
            <Setter Property="Width" Value="45" />
            <Setter Property="Height" Value="45" />
            <Setter Property="Stretch" Value="Fill" />
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="VerticalAlignment" Value="Top" />
            <Setter Property="RenderOptions.BitmapScalingMode" Value="HighQuality" />
            <EventSetter Event="MouseDown" Handler="MouseMove_General" />
        </Style>

        <Style x:Key="LabelStyle" TargetType="Label">
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="VerticalAlignment" Value="Top" />
        </Style>
    </UserControl.Resources>
    <Grid Grid.Row="1" Grid.Column="0" >

        <Label Content="Navigation"    Style="{StaticResource LabelStyle}" Margin="27,10,0,0"   />
        <Label Content="Sensor"        Style="{StaticResource LabelStyle}" Margin="27,128,0,0"  />
        <Label Content="LED and Sound" Style="{StaticResource LabelStyle}" Margin="27,221,0,0"  />
        <Label Content="Demo"          Style="{StaticResource LabelStyle}" Margin="152,221,0,0" />
        <Label Content="Logic"         Style="{StaticResource LabelStyle}" Margin="27,317,0,0" />

        <Image Source="pic/forward.png"  Tag="FORWARD"  Style="{StaticResource InstructionStyle}" Margin="81,36,0,0"   />
        <Image Source="pic/backward.png" Tag="BACKWARD" Style="{StaticResource InstructionStyle}" Margin="81,81,0,0"   />
        <Image Source="pic/left.png"     Tag="LEFT"     Style="{StaticResource InstructionStyle}" Margin="31,62,0,0"   />
        <Image Source="pic/right.png"    Tag="RIGHT"    Style="{StaticResource InstructionStyle}" Margin="131,62,0,0"  />
        <Image Source="pic/cliff.jpg"    Tag="CLIFF"    Style="{StaticResource InstructionStyle}" Margin="78,159,0,0"  />
        <Image Source="pic/bump.jpg"     Tag="BUMP"     Style="{StaticResource InstructionStyle}" Margin="28,159,0,0"  />
        <Image Source="pic/led.jpg"      Tag="LED"      Style="{StaticResource InstructionStyle}" Margin="28,252,0,0"  />
        <Image Source="pic/song.png"     Tag="SONG_DEF" Style="{StaticResource InstructionStyle}" Margin="78,252,0,0"  />
        <Image Source="pic/demo.jpg"     Tag="DEMO"     Style="{StaticResource InstructionStyle}" Margin="152,252,0,0" />
        <Image Source="pic/if.png"       Tag="IF"       Style="{StaticResource InstructionStyle}" Margin="28,348,0,0"  />
        <Image Source="pic/loop.png"     Tag="LOOP"     Style="{StaticResource InstructionStyle}" Margin="78,348,0,0" />
    </Grid>
</UserControl>
