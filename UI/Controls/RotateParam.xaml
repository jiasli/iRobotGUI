<src:BaseParamControl x:Class="iRobotGUI.Controls.RotateParam"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:src="clr-namespace:iRobotGUI.Controls"
       Height="150" Width="150" Background="White">
    <Grid>
        <Grid x:Name="RotateGrid">
            <Grid.RenderTransform>
                <RotateTransform CenterX="75" CenterY="75"/>
            </Grid.RenderTransform>
            <Ellipse>
                <Ellipse.Fill>
                    <ImageBrush ImageSource="/pic/create3.png"/>
                </Ellipse.Fill>
            </Ellipse>
        </Grid>
    </Grid>
</src:BaseParamControl>
